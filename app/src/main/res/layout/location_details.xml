<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"   android:layout_height="wrap_content"
    android:padding="5sp"
    >

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="14sp"
        android:paddingLeft="14sp"
        android:background="@drawable/card_background_selector"
        android:padding="5sp"
        >


      <LinearLayout

        android:orientation="vertical"
        android:background="@drawable/rounded_date_layout"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:paddingRight="16sp"
        android:paddingLeft="16sp"

        >


        <TextView
            android:id="@+id/datetextview"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/monthyeartextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jun 16"
            android:textColor="@color/white"
            android:textSize="10sp"
            />




    </LinearLayout>


        <LinearLayout

            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:paddingRight="5sp"
            android:paddingLeft="5sp"


            >


            <TextView
                android:id="@+id/fulladdresstextview"
                 android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDFC"
                android:textColor="@color/bg_gradient_end"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textStyle="bold"
                />

              <View
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"/>




            <TextView
                android:id="@+id/chequenumtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cheque/Ref no. CFG121"
                android:textColor="@android:color/black"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                android:visibility="gone"

                />


        </LinearLayout>






        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>




            <TextView
                android:id="@+id/timetextview"
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                />


    </LinearLayout>





</RelativeLayout>